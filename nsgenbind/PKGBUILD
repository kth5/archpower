pkgname=nsgenbind
pkgver=0.9
pkgrel=1.2
pkgdesc='NetSurf JavaScript binding generator'
arch=(x86_64 powerpc64le powerpc64 powerpc espresso)
url='https://git.netsurf-browser.org/nsgenbind.git'
license=(GPL)
makedepends=(netsurf-buildsystem git)
source=("git://git.netsurf-browser.org/nsgenbind.git#tag=release/$pkgver")
b2sums=('beb5977b9c34c289e27bc7d2ac4715bbb8c70a4481d2349b2c5bc816a0f13c5149d7f9c5056c48c599cceae51ae4caad8db12b7a0bbf996eac23fd1105d6e4f7')

build() {
  make -C $pkgname PREFIX=/usr
}

package() {
  make -C $pkgname install PREFIX=/usr DESTDIR="$pkgdir"
}
