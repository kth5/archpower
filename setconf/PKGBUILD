pkgname=setconf
pkgver=0.7.7
pkgrel=4
pkgdesc='Utility for easily changing settings in configuration files'
arch=(any)
url='https://setconf.roboticoverlords.org/'
license=(GPL2)
depends=(python)
validpgpkeys=('962855F072C7A01846405864FCF3C8CB5CF9C8D4')
source=("$url/$pkgname-$pkgver.tar.xz"{,.asc})
b2sums=('6f771b29d77aac4eb8b2c1fde14f1c99d6d57c00fb90b7b35023e469dd0a52c6b65f02975d8dbf36fbad9083499fda0abf6e87991e336559d4198dca760c6d5c'
        'SKIP')

package() {
  cd $pkgname-$pkgver
  install -Dm755 $pkgname.py "$pkgdir/usr/bin/$pkgname"
  install -Dm644 $pkgname.1.gz "$pkgdir/usr/share/man/man1/$pkgname.1.gz"
}
