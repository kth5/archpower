pkgbase=aubio
pkgname=(aubio python-aubio)
pkgver=0.4.9
pkgrel=23
pkgdesc="A tool for extracting annotations from audio signals"
arch=(x86_64 powerpc64le powerpc64 powerpc espresso)
url="https://aubio.org/"
license=(GPL-3.0-or-later)
makedepends=(
  doxygen
  ffmpeg
  fftw
  jack
  libsamplerate
  libsndfile
  python-build
  python-installer
  python-numpy
  python-setuptools
  python-wheel
  txt2man
  waf
)
checkdepends=(python-pytest)
