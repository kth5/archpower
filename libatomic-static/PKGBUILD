# Maintainer: Alexander Baldeck <alex.bldck@gmail.com>
pkgname=(libatomic-static)
pkgver=13.2.1
_majorver=${pkgver%%.*}
_commit=860b0f0ef787f756c0e293671b4c4622dff63a79
pkgrel=3.1
pkgdesc='The GNU Compiler Collection'
arch=(x86_64 powerpc64le powerpc64 powerpc riscv64)
license=(GPL3 LGPL FDL custom)
url='https://gcc.gnu.org'
makedepends=(
  binutils
  gcc=${pkgver}
  doxygen
  git
  libisl
  libmpc
  libxcrypt
  python
  zstd
)
options=(!emptydirs !lto)
source=(git+https://sourceware.org/git/gcc.git#commit=${_commit})
validpgpkeys=(F3691687D867B81B51CE07D9BBE43771487328A9  # bpiotrowski@archlinux.org
              86CFFCA918CF3AF47147588051E8B148A9999C34  # evangelos@foutrelis.com
              13975A70E63C361C73AE69EF6EEB81F8981C74C7  # richard.guenther@gmail.com
              D3A93CAD751C2AF4F8C7AD516C35B99309B5FA62) # Jakub Jelinek <jakub@redhat.com>
sha256sums=('SKIP')

prepare() {
  mkdir -p ${srcdir}/build
}

build() {
  cd ${srcdir}/build
  ../gcc/libatomic/configure --prefix=/usr --enable-static --disable-shared
  make
}

package_libatomic-static() {
  pkgdesc='Static version of GCC libatomic'
  options=(!strip)
  provides=(libatomic.a)

  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
