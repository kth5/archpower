prepare() {
  cd $pkgname-$pkgver

  patch -Np1 < ../0001-trigger.patch
  patch -Np1 < ../0002-systemd-deps.patch
  patch -Np1 < ../0003-systemd-deps-v2.patch
  patch -Np1 < ../mkinitcpio-archpower-support.patch
}

build(){
  cd $pkgname-$pkgver
  arch-meson \
    -Dsystemd_hooks=true \
    ../build
  meson compile -C ../build
}

check() {
  cd $pkgname-$pkgver
  meson test -C ../build
}

package() {
  cd $pkgname-$pkgver
  DESTDIR="$pkgdir" meson install -C ../build
}
