pkgname=('xorg-server' 'xorg-server-xephyr' 'xorg-server-xvfb' 'xorg-server-xnest'
         'xorg-server-common' 'xorg-server-devel')
pkgver=21.1.10
pkgrel=1.1
arch=(x86_64 powerpc64le powerpc64 powerpc riscv64)
license=('custom')
groups=('xorg')
