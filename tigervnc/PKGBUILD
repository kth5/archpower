  'xkeyboard-config'
  'xorg-xauth'
  'xorg-xinit'
  'xorg-xkbcomp'
  'xorg-xsetroot'
  'zlib'
)
makedepends=(
  'cmake'
  'git'
  'imagemagick'
  'java-environment>=8'
  'java-environment<=17'
  'strip-nondeterminism'
  'xorg-font-util'
