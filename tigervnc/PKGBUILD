pkgver=1.15.0
pkgrel=3
_xorgver=21.1.15
pkgdesc="Suite of VNC servers and clients based on the VNC 4 branch of TightVNC"
arch=(x86_64 powerpc64le powerpc64 powerpc espresso)
url="https://www.tigervnc.org"
license=('GPL-2.0-only')
depends=(
