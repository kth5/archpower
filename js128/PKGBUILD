pkgver=128.3.1
pkgrel=1
pkgdesc="JavaScript interpreter and libraries - Version 128"
url="https://spidermonkey.dev/"
arch=(x86_64 powerpc64le powerpc64 powerpc riscv64)
license=(MPL-2.0)
depends=(
  gcc-libs
  glibc
  gtk3
  libpulse
  libxss
  libxt
  readline
  sh
  zlib
)
