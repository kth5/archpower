  alsa-lib
  cbindgen
  clang
  lld
  llvm
  python
  rust
  unzip
  zip
)
makedepends_powerpc64le=(nodejs-lts-iron)
makedepends_powerpc64=(nodejs-lts-iron)
makedepends_riscv64=(nodejs-lts-iron)
makedepends_x86_64=(nodejs-lts-iron)
checkdepends=(
  git
  mercurial
)
options=(
  !lto
)
_relver=${pkgver}esr
