pkgname=nodejs
pkgver=20.5.1
_commit=9f51c55a47702dc6a0ca3569853dd7ba022bf7bb
pkgrel=1
pkgdesc='Evented I/O for V8 javascript'
arch=(x86_64 powerpc64le powerpc64 riscv64)
url='https://nodejs.org/'
license=('MIT')
options=(!lto)
depends=('brotli' 'openssl' 'zlib' 'icu' 'libuv' 'libnghttp2' 'c-ares') # 'http-parser' 'v8')
makedepends=('git' 'python' 'procps-ng')
provides=("npm=$pkgver")
source=("git+https://github.com/nodejs/node.git#commit=$_commit")
sha512sums=('SKIP')

build() {
  cd node

  case "${CARCH}" in
    riscv64)
      export LDFLAGS+=' -Wl,--no-as-needed -latomic -Wl,--as-needed'
    ;;
  esac

  ./configure \
    --prefix=/usr \
    --with-intl=system-icu \
    --shared \
    --shared-openssl \
    --shared-zlib \
    --shared-libuv \
    --experimental-http-parser \
    --shared-nghttp2 \
    --shared-cares \
    --shared-brotli
    # --shared-v8
    # --shared-http-parser

  make
}

check() {
  cd node
  make test || :
}

package() {
  cd node
  make DESTDIR="$pkgdir" install
  install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/nodejs/

  cd "$pkgdir"/usr/lib
  ln -s libnode.so.* libnode.so
}

