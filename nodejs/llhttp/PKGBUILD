pkgname=llhttp
pkgver=9.3.0
pkgrel=1
pkgdesc='Port of http_parser to llparse'
arch=(x86_64 powerpc64le powerpc64 powerpc espresso)
url='https://llhttp.org'
license=(MIT)
depends=(glibc)
makedepends=(cmake
             git)
source=(${pkgname}-${pkgver}.tar.gz::https://github.com/nodejs/llhttp/archive/release/v${pkgver}.tar.gz)
sha256sums=('1a2b45cb8dda7082b307d336607023aa65549d6f060da1d246b1313da22b685a')

build() {
  cmake -B build -S ${pkgname}-release-v${pkgver} \
    -DBUILD_SHARED_LIBS=ON \
    -DCMAKE_INSTALL_PREFIX=/usr

  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
