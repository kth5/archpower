pkgname=arrow
pkgver=19.0.1
pkgrel=7
pkgdesc="Columnar in-memory analytics layer for big data."
arch=(x86_64 powerpc64le powerpc64 powerpc riscv64)
url="https://arrow.apache.org"
license=(Apache-2.0)
