pkgname=calligra
pkgdesc='A set of applications for productivity and creative usage'
pkgver=24.12.3
pkgrel=3
arch=(x86_64 powerpc64le powerpc64 riscv64)
url='https://www.calligra-suite.org/'
license=(GPL-2.0-only)
depends=(cauchy
         fontconfig
         freetype2
