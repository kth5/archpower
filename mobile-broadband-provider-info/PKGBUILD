pkgname=mobile-broadband-provider-info
pkgver=20251101
pkgrel=1
pkgdesc="APN configuration presets for mobile broadband connections"
url="https://gitlab.gnome.org/GNOME/mobile-broadband-provider-info"
arch=(any)
license=(CC-PDDC)
makedepends=(
  git
  libxslt
  meson
)
source=("git+$url.git?signed#tag=$pkgver")
b2sums=('4fc28839b669552bf79d011136f8688e144ac4256ddde6252f1f5d90d144e002627cdc7d043a15f38285a1b9cb73a0f667f6bbc1be87ef7d90186a98013ee7bd')
validpgpkeys=(
  0DB3932762F78E592F6522AFBB5A2C77584122D3 # Guido GÃ¼nther <agx@sigxcpu.org>
)

prepare() {
  cd $pkgname
}

build() {
  arch-meson $pkgname build
  meson compile -C build
}

check() {
  meson test -C build --print-errorlogs
}

package() {
  meson install -C build --destdir "$pkgdir"
}

