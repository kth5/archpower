pkgname=zsync
pkgver=0.6.3
pkgrel=1
pkgdesc="A file transfer program that's able to connect to rsync servers"
arch=(x86_64 powerpc64le powerpc64 powerpc espresso)
url="https://zsync.moria.org.uk/"
depends=("glibc")
license=("LicenseRef-Artistic")
source=(https://${pkgname}.moria.org.uk/download/${pkgname}-${pkgver}.tar.bz2)
sha512sums=('b7b9f16c9dc9d3d7753eb43e57d8c4bc8adea37ed3b6372829b466d3b010dd2c287a1de2ec02a5f1a4d96ee52fdcfec6d6021776368fe4a3af862c785de20089')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}

  make prefix="${pkgdir}"/usr install
  install -d "$pkgdir/usr/share/licenses/$pkgname"
  mv "$pkgdir/usr/share/doc/zsync/COPYING" "$pkgdir/usr/share/licenses/$pkgname/"
}
