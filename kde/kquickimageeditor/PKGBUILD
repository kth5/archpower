pkgname=kquickimageeditor
pkgver=0.6.0
pkgrel=2
pkgdesc='QML image editing components'
license=(LGPL-2.1-or-later)
arch=(x86_64 powerpc64le powerpc64 powerpc espresso)
url='https://invent.kde.org/libraries/kquickimageeditor'
depends=(gcc-libs
         glibc
         kconfig
         kirigami
         opencv
         qt6-base
         qt6-declarative)
makedepends=(extra-cmake-modules)
source=(https://download.kde.org/stable/$pkgname/$pkgname-$pkgver.tar.xz{,.sig})
sha256sums=('11ed4ce1c164a8b6d50bbc1548b5849ab75d5fb837619b90f2cea51ed122547a'
            'SKIP')
validpgpkeys=(39FFA93CAE9C6AFC212AD00202325448204E452A) # Carl Schwan <carl@carlschwan.eu>

build() {
  cmake -B build -S $pkgbase-$pkgver
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
