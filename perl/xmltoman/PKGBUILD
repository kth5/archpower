pkgname=xmltoman
pkgver=0.4
pkgrel=6
pkgdesc='Convert xml to man pages in groff format or html'
arch=(any)
url='https://sourceforge.net/projects/xmltoman/'
license=(GPL-2.0-or-later)
depends=(perl perl-xml-parser)
source=("$pkgname-$pkgver.tar.gz::https://downloads.sourceforge.net/project/xmltoman/xmltoman/xmltoman-$pkgver.tar.gz/xmltoman-$pkgver.tar.gz")
sha512sums=('347722731e2101ecd0619f88f4efdbca534810c96977a1281af685e8a61f4c1a826a71a9f0e3af43cc899936640787366a78077f36d23a9efcfeb789dbcfae22')
b2sums=('d8641a19742d845fdab0e11703a60c16656c63529a4d86931a8038cbdb87e0fbf241b7ff38ed05ddab62daab608407bd5d7778c060fe3cbef1750976fa588dee')

build() {
  cd "$pkgname-$pkgver"

  make PREFIX=/usr
}

package() {
  cd "$pkgname-$pkgver"

  make PREFIX=/usr DESTDIR="$pkgdir" install
}
