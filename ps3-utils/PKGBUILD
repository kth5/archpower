# POWER Maintainer: Alexander Baldeck <alex.bldck@gmail.com>
pkgname=ps3-utils
pkgver=2.3
pkgrel=2
pkgdesc="Collection of utilities for running Linux on PS3"
arch=(powerpc64 powerpc)
url="https://archlinuxpower.org/share/src/ps3-utils"
license=('GPL-2.0-only')
depends=('glibc')
source=("https://archlinuxpower.org/share/src/ps3-utils/$pkgname-$pkgver.tar.bz2")
sha256sums=('c44a84da3cf37ecc69b36f6079a814e680cf37c74cb7d55f457635adb8209351')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr --sbindir=/usr/bin
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
