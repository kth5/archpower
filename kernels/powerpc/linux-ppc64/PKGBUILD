pkgbase=linux-ppc64
pkgver=6.16.10.arch1
pkgrel=1
pkgdesc='Linux (powerpc64le/ 4K page size)'
url='https://github.com/archlinux/linux'
arch=(any)
license=(GPL2)
makedepends=(
  bc
  cpio
  gettext
  libelf
  pahole
  perl
  python
  tar
  xz
)
# cross compiler
makedepends_powerpc=(powerpc64-unknown-linux-gnu-gcc)
makedepends_powerpc64le=(powerpc64-unknown-linux-gnu-gcc)
makedepends_x86_64=(powerpc64-unknown-linux-gnu-gcc)

options=('!ccache' '!debug' '!strip')
_srcname=linux-${pkgver%.*}
_srctag=v${pkgver%.*}-${pkgver##*.}
source=(
  https://cdn.kernel.org/pub/linux/kernel/v${pkgver%%.*}.x/${_srcname}.tar.{xz,sign}
  $url/releases/download/$_srctag/linux-$_srctag.patch.zst{,.sig}
  config  # the main kernel config file
  0002-hotfix-usb-audio.patch
  0003-ppc-radeon-qw-pm.patch
  0004-pcmcia-iomega-clik.patch
  0005-i915-diag.patch
  0006-i915-page-64k.patch
  0007-i915-ppc.patch
  0008-ppc-gcc-15.patch
  0666-hotfix-windfarm_rm31.patch
  hotfix-aha152x-printk-cont.patch
  hotfix-appledisplay.patch
  xserve-frontpanel.patch
)
