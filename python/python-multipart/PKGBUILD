_pkgname=multipart
pkgname=python-$_pkgname
pkgver=1.3.0
pkgrel=2
pkgdesc='Parser for multipart/form-data'
arch=(any)
url='https://github.com/defnull/multipart'
license=('MIT')
depends=('python')
makedepends=('python-build' 'python-installer' 'python-flit-core')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha512sums=('87d187a564323aa8cc802aafba168e2adefe021bc2cc61695cfe66e933b16dd460770c3c2de31412aeed1040ce602fa5bb9003b26461157b726348cd4788f0e2')

build() {
  cd $_pkgname-$pkgver

  python -m build --wheel --no-isolation
}

package() {
  cd $_pkgname-$pkgver

  python -m installer --destdir="$pkgdir" dist/*.whl

  install -Dm 644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

# vim:set ts=2 sw=2 et:
