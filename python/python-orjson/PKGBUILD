_name=orjson
pkgname=python-orjson
pkgver=3.11.3
pkgrel=1
pkgdesc="Fast, correct Python JSON library supporting dataclasses and datetimes"
arch=(x86_64 powerpc64le powerpc64 powerpc espresso)
url="https://github.com/ijl/orjson"
license=(
  Apache-2.0
  MIT
)
depends=(
  gcc-libs
  glibc
  python
)
makedepends=(
  maturin
  python-installer
  rust
)
checkdepends_powerpc64=(
  python-arrow
  python-pendulum
  python-psutil
  python-pytest
  python-pytz
  python-xxhash
)
checkdepends_powerpc64le=(
  python-arrow
  python-pendulum
  python-psutil
  python-pytest
  python-pytz
  python-xxhash
)
checkdepends_x86_64=(
  python-arrow
  python-pendulum
  python-psutil
  python-pytest
  python-pytz
  python-xxhash
)
source=($url/archive/$pkgver/$_name-$pkgver.tar.gz)
sha512sums=('64bd2f56ee91dabcb737ad39bf0c905614e475be75f26c4c51f01b471d0da85b8151e48e55be574ba2dd9346eea62968f973eaa73114300f5c8dd5439e180a5e')
b2sums=('09590a996e005815b80c80ac8001a958e4b09c2c9bebeeadea8cf8168a4b6b7e366ac8caf420b50856cc627bca8c06ac75a1fbd040642ae833d1e730bf2836f6')

build() {
  cd $_name-$pkgver
  maturin build --release --strip
}

check() {
  case "${CARCH}" in
    powerpc) return 0 ;;
  esac

  local _site_packages=$(python -c "import site; print(site.getsitepackages()[0])")

  cd $_name-$pkgver
  python -m installer --destdir=test_dir target/wheels/*.whl
  export PYTHONPATH="test_dir/$_site_packages:$PYTHONPATH"
  pytest -vv
}

package() {
  cd $_name-$pkgver
  python -m installer --destdir="$pkgdir" target/wheels/*.whl
  install -vDm 644 {CHANGELOG,README}.md -t "$pkgdir/usr/share/doc/$pkgname/"
  install -vDm 644 LICENSE-* -t "$pkgdir/usr/share/licenses/$pkgname/"
}
