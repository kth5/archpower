  python-pytest-run-parallel
  python-pytz
  python-sqlalchemy
)
checkdepends_x86_64=(
  python-ansi2html
  python-cloudpickle
  python-dirty-equals
  python-email-validator
  python-faker
  python-greenlet
  python-hypothesis
  python-jsonschema
