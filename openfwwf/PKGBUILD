# Maintainer: Alexander Baldeck <alex.bldck@gmail.com>
pkgname=openfwwf
pkgver=5.2
pkgrel=3
pkgdesc="Open source firmware for Broadcom/AirForce chipset based devices"
arch=(any)
url="http://netweb.ing.unibs.it/openfwwf/index.php"
license=(GPL-2.0-only)
makedepends=('b43-tools')
source=("http://netweb.ing.unibs.it/openfwwf/firmware/openfwwf-${pkgver}.tar.gz")
sha256sums=('9de03320083201080b2e94b81637ac07a159cf4e6f3481383e1a217e627bc0dc')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make PREFIX="${pkgdir}/usr/lib/firmware/b43-open" install
}
